---
import { Image } from 'astro:assets'
import { Icon } from 'astro-icon'

import logo from '../../../assets/images/logo_1.png'
import vodafone from '../../../assets/images/mts.png'
import kyivstar from '../../../assets/images/ks.png'
import delivery from '../../../assets/images/delivery_ru-ua.svg'
import ukrainianFlag from '../../../assets/images/uk.gif'
import SideBarMenu from './components/SideBarMenu.astro'
---

<header class="p-2.5">
  <SideBarMenu />
  <div
    class="border border-black rounded-md mb-5 p-1.5 flex justify-between items-center"
  >
    <button id="openMenuButton">
      <Icon pack="ion" name="menu" class="w-9 hover:bg-gray-100" />
    </button>
    <Icon pack="ph" name="shopping-cart-simple" class="w-8" />
  </div>
  <Image src={logo} alt="Logotype Solpower" class="mb-5" />
  <div class="flex items-center justify-between mb-1">
    <div class="flex flex-col">
      <div class="flex items-center mb-1">
        <Image src={vodafone} alt="Логотип водафон" class="mr-1 w-5 h-5" />
        <span>(095) 913-588-3</span>
      </div>
      <div class="flex items-center">
        <Image src={kyivstar} alt="Логотип киевстар" class="mr-1 w-5 h-5" />
        <span>(097) 913-588-3</span>
      </div>
    </div>
    <Image src={delivery} alt="Бесплатная доставка по Украине" />
  </div>
  <slot />
</header>
