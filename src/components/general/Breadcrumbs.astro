---
import { Icon } from 'astro-icon'
interface Props {
  url: string
  name: string
}

const { url, name } = Astro.props
---

<ol
  class="flex items-center whitespace-nowrap mb-3 container mx-auto"
  aria-label="Breadcrumb"
>
  <li class="inline-flex items-center">
    <Icon pack="iconoir" name="nav-arrow-left" class="w-4 text-gray-600 mr-1" />
    <a
      class="flex items-center text-sm lg:text-base text-gray-500 hover:text-blue-600 focus:outline-none focus:text-blue-600 dark:focus:text-blue-500"
      href={`/${url}`}
    >
      {name}
    </a>
  </li>
</ol>
