---
import Tooltip from './components/Tooltip.astro'
import { Review } from '../../../../js/types'

interface Props {
  reviews: Review[]
}

const { reviews } = Astro.props
---

{
  reviews.length === 0 && (
    <p class="mb-5">Пока никто не оставил отзыв. Будьте первым!</p>
  )
}

<div class="flex items-center mb-5">
  <span class="bg-green-600 font-semibold text-white mr-1.5 rounded">
    &nbsp;+100 ₴&nbsp;</span
  > за полезный отзыв
  <Tooltip />
</div>

<button
  type="button"
  data-hs-overlay="#hs-full-screen-modal-below-sm"
  class="w-full lg:w-[15rem] py-2 text-lg px-4 inline-flex justify-center items-center gap-x-2 font-semibold rounded-lg border border-transparent bg-yellow-500 text-white hover:bg-yellow-600 disabled:opacity-50 disabled:pointer-events-none dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600"
>
  Написать отзыв
</button>
