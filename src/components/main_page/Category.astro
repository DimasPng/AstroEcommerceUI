---
import { Image } from 'astro:assets'
import { Icon } from 'astro-icon'

interface Props {
  categories: object
}
const { categories } = Astro.props
---

<h1 class="uppercase mb-2 text-lg font-semibold text-center">Категории</h1>
<ul class="grid grid-cols-2 lg:grid-cols-3 gap-2 p-1">
  {
    categories.map((category) => (
      <li
        class="p-2 border border-1 rounded-md bg-white shadow-sm hover:shadow-md text-center flex flex-col transition duration-300 ease-in-out transform md:hover:scale-105"
        key={category.id}
      >
        <a href={`${category['uri_category']}`}>
          <h2 class="leading-tight mb-1 text-lg">{category.title}</h2>
          <Image
            src={category.image}
            width="100"
            height="100"
            alt="Product 1"
            class="mx-auto"
          />
        </a>
      </li>
    ))
  }
</ul>
