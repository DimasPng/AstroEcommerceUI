---
import Product from './Product.astro'
const request = await fetch('http://127.0.0.1:8000/api/products')
const data = await request.json()
const products = data.data
---

<ul class="flex flex-wrap p-1">
  {
    products.map((product) => {
      return (
        <Product
          title={product.title}
          price={product.price}
          images={product.images}
        />
      )
    })
  }
</ul>
